{
  "name": "mini-pos-app",
  "version": "1.0.0",
  "main": "dist/electron/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "build:electron": "tsc -p tsconfig.electron.json",
    "build:all": "npm run build && npm run build:electron && electron-builder"
  },
  "build": {
    "appId": "com.tuempresa.minipos",
    "productName": "MiniPOS",
    "directories": {
      "output": "release"
    },
    "files": [
      "out/**/*",
      "dist/electron/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "public/icon.png"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "public/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "public/icon.png"
    }
  },
  "dependencies": {
    "@prisma/client": "^5.0.0",
    "next": "^15.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.0.0",
    "cross-env": "^7.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "electron-is-dev": "^2.0.0",
    "typescript": "^5.0.0",
    "wait-on": "^7.0.0"
  }
}
